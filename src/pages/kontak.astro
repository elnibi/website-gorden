---
import Layout from "../layouts/Layout.astro";
---
<Layout>
  <h1 class="text-2xl font-bold mb-4">Kontak Kami</h1>
  <form name="kontak" method="POST" data-netlify="true" class="space-y-4 max-w-lg">
    <input type="hidden" name="form-name" value="kontak" />
    <div>
      <label class="block text-sm mb-1">Nama</label>
      <input type="text" name="nama" required class="w-full border p-2 rounded" />
    </div>
    <div>
      <label class="block text-sm mb-1">Email</label>
      <input type="email" name="email" required class="w-full border p-2 rounded" />
    </div>
    <div>
      <label class="block text-sm mb-1">Pesan</label>
      <textarea name="pesan" rows="5" required class="w-full border p-2 rounded"></textarea>
    </div>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Kirim</button>
  </form>
</Layout>
